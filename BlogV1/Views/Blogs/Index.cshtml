@model List<Blog>


<div class="mainbar">
    @foreach(var item in Model)
    {
        <div class="article">
            <h2><span>@item.Name</span></h2>
            <div class="clr"></div>
            <p><span class="date">@item.PublishDate.ToString("MM/yyyy HH:mm")</span> &nbsp; | Tags <a href="#">@item.Tags</a>, <a href="#">@item.Tags</a></p>
            <img src="@item.ImageUrl" width="625" height="205" alt="" />
            @{
                string description = item.Description;
                string newDescription = description.Length > 50 ? description.Substring(0, 175) + "..." : description;
            }
            <p>@newDescription</p>
            <p class="spec"><a href="Blogs/Details?id=@item.Id" class="rm">Read more &raquo;</a>
                <a href="#" class="com" style="margin-left:8px"><span>@item.CommentCount</span> Comments</a>
                <a href="#" class="com" style="margin-left:8px"><span>@item.LikeCount</span> Likes</a>
                <a href="#" class="com" style="margin-left:8px"><span>@item.ViewCount</span> Views</a>
             </p>
        </div>
    }
    
</div>